@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <text>
        <span class="loginspan">@Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { @class = "username", title = "Manage" })</span>
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
        {

            @Html.AntiForgeryToken()
            <a href="javascript:document.getElementById('logoutForm').submit()">Log out</a>
        }
    </text>
}
else
{
    <button type="submit" class="btn btn-primary" onclick="location.href='@Url.Action("Register", "Account")'" style="min-height:40px;"> Sign Up</button>
    <button type="submit" class="btn btn-primary" onclick="location.href='@Url.Action("Login", "Account")'" style="min-height:40px;">Log In</button>
}

