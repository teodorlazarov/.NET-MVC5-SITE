@{
    ViewBag.Title = "FeedbackIndex";
}

<div class="container">
    <div style="text-align:center" class="col pt-4">
        <a href="@Url.Action("Create","Feedback")">
            <button type="submit" class="btn btn-primary">Leave a comment</button>
        </a>
    </div>

    @foreach (var entry in ViewBag.Entries)
    {
        <div class="col pt-4 pb-4">
            <div id="inscomments">

                <!--<p>@entry.Username posted on @entry.DateAdded.ToLongDateString() @entry.DateAdded.ToLongTimeString():</p>
                <p>-@entry.Message</p>-->

                <h3>@Html.ActionLink((string)entry.Message, "Show" + "/" + (string)entry.Id.ToString())</h3>
                <p>
                    Posted by @Html.ActionLink((string)entry.Username, "Comments" + "/" + (string)entry.Username) on @Html.ActionLink((string)entry.DateAdded.ToString(), "CommentsByDate", new { userDate = entry.DateAdded.ToString("dd-MM-yyyy") })

                </p>


                @if (!String.IsNullOrEmpty(User.Identity.Name))
                {
                    if (entry.Username == User.Identity.Name.Substring(0, User.Identity.Name.IndexOf("@")))
                    {
                        <a href="@Url.Action("Edit/" + entry.Id, "Feedback")"><button type="submit" class="btn btn-primary">Edit me</button></a>
                        //@Html.ActionLink("Delete", "Delete", new { id = entry.Id})
                        <a href="@Url.Action("Delete/"+entry.Id,"Feedback")"><button type="submit" class="btn btn-primary">Delete</button></a>
                           }
                           }
                    </div>
                </div>
                }

            </div>
