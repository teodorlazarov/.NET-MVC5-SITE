
@{
    ViewBag.Title = "Delete";
}
<div class="container">
    <div class="row pt-5 pb-4">
        <div class="col text-center">
            <h2 style="color:#0095da;">There is no turning back!</h2>
            <h4 style="color:#0095da;">Are you sure you want to delete this post?</h4>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
            <p>
                <input class="btn btn-primary" type="submit" value="Delete" />             
                <button class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Feedback")';return false;">Back to List</button>

            </p>
            }
        </div>
    </div>
</div>