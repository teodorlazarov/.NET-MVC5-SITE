@{
    ViewBag.Title = "Edit";
}


<div class="container">
    <div id="feedback" class="row pt-5 pb-4">
        <div class="col">
            <form id="messageForm" method="post">
                <div class="form-group">
                    <label for="fnameForm">Name:</label>
                    <p>@Model.Username</p>
                </div>
                <div class="form-group">
                    <label for="lnameForm">Date Added: </label>
                    <p>@Model.DateAdded</p>
                </div>
                <div class="form-group">
                    <label for="message">Edit your message: </label>
                    <textarea style="min-height:50px; max-height: 200px;" name="Message" class="form-control" id="feedbackmessage" rows="3" required>@Model.Message</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

        </div>
    </div>
</div>